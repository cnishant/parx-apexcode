<apex:page controller="FAPortfolioAjaxController" standardStylesheets="false" showHeader="false" sidebar="false"> 
    <div class="rightBoxes">
        <div class="seminarShortInfo">
            <apex:pageBlock >
                <apex:pageBlockSection columns="1">
                    <apex:pageBlockSectionItem >
                        <apex:outputLabel value="{!'Dauer'}"></apex:outputLabel>
                        <apex:outputText value="{!dauer} {!IF(currentPortfolio.Dauer_in_Tagen__c=1, ' Tag',' Tage')}"/>
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem >
                        <apex:outputLabel value="{!'Teilnehmer'}"></apex:outputLabel>
                        <apex:outputText value="{!'max. '}{!teilnehmer}"/>
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem rendered="{!IF(currentPortfolio.Beginn__c!='',true,false)}">
                        <apex:outputLabel value="{!'Beginn'}"></apex:outputLabel>
                        <apex:outputField value="{!currentPortfolio.Beginn__c}"/>
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem rendered="{!IF(currentPortfolio.Ende__c!='',true,false)}">
                        <apex:outputLabel value="{!'Ende'}"></apex:outputLabel>
                        <apex:outputField value="{!currentPortfolio.Ende__c}"/>
                    </apex:pageBlockSectionItem>
                </apex:pageBlockSection>
            </apex:pageBlock>
        </div>
        <div class="bookingButton">
            <a id="buttonSeminarBuchen">Hier Buchen</a>
        </div>
    </div>
</apex:page>