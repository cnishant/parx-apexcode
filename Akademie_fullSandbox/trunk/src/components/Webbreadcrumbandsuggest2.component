<apex:component controller="FaNavigationFacade">
  
  <style>
      .breadcrumbSeperator{
          font-size: 0.75em;
      }
  </style>
  
  <div class="l" id="breadcrubSuggestionBar">
      <div class="breadcrumb">
          <a href="/startseite" >Startseite</a>
          <apex:repeat value="{!breadCrumb}" var="bitem">
              <span class="breadcrumbSeperator">{!'>'}</span> <a href="{!bitem.url}">{!bitem.name}</a>
          </apex:repeat>
      </div>
      <c:WebSuggestion rendered="false" />
      <ul class="artikelnavi">
          <apex:outputText rendered="{!IF($CurrentPage.Parameters.portfolioId != '', 'true', 'false')}">
          <li>
              <a class="pdf" target="_blank" >PDF</a>
              
          </li>
         
          <li>
              <a class="print" target="_blank" >Drucken</a>
              
          </li>
          <script>
                  $(".pdf").attr('href', window.location.pathname+'/pdf');
                  $(".print").attr('href', window.location.pathname+'/print');
          </script>
          </apex:outputText>
          <li>
              <a class="basket" href="/warenkorb">Warenkorb (0)</a>
          </li>
          </ul>
  </div>
</apex:component>