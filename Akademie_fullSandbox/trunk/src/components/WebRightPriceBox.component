        <p><apex:outputText escape="false" value="{!PriceInformation.sonderpreis}" /></p>
        <div class="separator">&nbsp;</div>
        </apex:outputText>
        <!-- Ansprechpartner -->
        <h3 class="c">{!PriceInformation.aTitel}</h3>

        <strong>{!PriceInformation.aName}</strong>
        <p class="tel">{!PriceInformation.aTelefon}</p>
        <p class="mail">
          <a href="mailto:{!PriceInformation.aEMail}" title="Mail an {!PriceInformation.aName}">{!PriceInformation.aEMail}</a>
        </p>
        <div class="c"></div>
      </div>
</apex:component>