<apex:component controller="SeminarDetailviewController">
<div class="right_column_box element bright">

        <!-- Teilnahmegebuehr -->
        
            <h3 class="c">{!IF(PriceInformation.isPruefungegebuehr,'PRÜFUNGSGEBÜHR', 'PREIS')}</h3>
            <p>
            <apex:outputText rendered="{!IF(PriceInformation.price!='0,-', true, false)}">
                <strong>{!PriceInformation.price} EUR</strong> zzgl. MwSt.
            </apex:outputText>
            {!PriceInformation.priceHinweis}
            </p>
        
        <!--<apex:outputText rendered="{!PriceInformation.isIntensivSeminar}">
        <div class="spacer"></div>
        <p>
