<apex:page showheader="false" id="crd_kontaktformular" sidebar="false" 
	cache="true" expires="2592000"
controller="CRD_pageTemplatesController"  title="{!$Label.de_title}" language="{!defaultlanguage}" >

<apex:composition template="{!$Site.Template}">

        <apex:define name="body">
                    <!--Start LeftSide Content -->
                	<div class="contentTextSmall">
	                    <div id="contact" class="small">
	                        <c:CRD_kontakt />
	                    </div>
                    </div>
                    <!--End LeftSide Content -->
                
                    <!--Start RightSide Content -->
                    <div id="colRgt">
                        <c:CRD_contactportlet rendered="{!AND(isAuthenticated,NOT(showclearingcomp),showcontactportlet)}" />
                        
                        <apex:outputPanel id="rightcolumn" rendered="{!NOT(isAuthenticated)}">
                        <!--Start oneColInfo -->
                        <div class="oneCol">
                            <div class="oneColInfo">
                                <c:contentblock name="rghtcol1" />
                            </div>
                            <div class="oneColBtm">
                                <c:contentblock name="rghtcol1Btm" />
                            </div>
                        </div>
                        <!--End oneColInfo --> 
                        <!--Start oneColInfo -->
                        <div class="oneCol">
                            <div class="oneColInfo">
                                <c:contentblock name="rghtcol2" />
                            </div>
                            <div class="oneColBtm">
                                <c:contentblock name="rghtcol2Btm" />
                            </div>
                        </div>
                        <!--End oneColInfo -->
                        </apex:outputPanel>
                    </div> 
                    <!--End RightSide Content --> 
    </apex:define>
</apex:composition>
<site:previewAsAdmin />
</apex:page>