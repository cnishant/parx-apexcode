<!--  action="{!init}" > -->

<apex:composition template="{!$Site.Template}">

		<apex:define name="body">
		 	<c:contentblock name="willkommen" />
		 	<c:contentblock name="Teaser" />
		 	
        		<div class="contactBox" id="cbox" >
        			<div id="contact">
        				<p><apex:outputText escape="false" value="{!$Label.login_intro}" /></p>
