	        			<!-- 
	        			<c:SiteLogin id="login" />
	        			-->
	        			<p><apex:outputText escape="false" value="{!$Label.login_posttext}" /></p>
        			</div>
        			<span id="end"></span>
        		</div>
        		<div id="colRgt">
		        	<div id="sidebar">
		        		<c:contentblock name="sidebarimage" id="sidebarimage" />
		        	</div>
	        	</div>
        		<!-- <img class="lft" src="{!URLFOR($Resource.gigasetciZip, 'img/kontakt.png')}" alt="kontakt" /> -->
        		<c:contentblock name="system" id="system" />
	</apex:define>
