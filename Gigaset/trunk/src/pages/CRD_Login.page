<apex:page showheader="false" id="CRD_login" sidebar="false" title="{!$Label.de_title}"  controller="TemplateController" language="{!defaultlanguage}" action="{!init}" >

<apex:composition template="{!$Site.Template}">

        <apex:define name="body">
            <c:contentblock name="Teaser" />
     		<apex:outputPanel layout="block" id="loginpanel">
                 <p>{!$Label.login_intro}</p>
                 <apex:outputPanel id="partnerloginintro" rendered="{!$Site.RegistrationEnabled}">
                     <p>{!$Label.login_intro_partner}&nbsp; 
                         <apex:outputLink value="{!$Page.page}?pageid={!registrationpageid}" id="registration_btn" styleClass="">
                             <apex:outputText value="{!$Label.login_new_user}" />
                         </apex:outputLink>
                     </p>
                 </apex:outputPanel>
                 <c:CRD_Login id="login" />
                 <apex:outputPanel layout="block" style="float: left;" id="posttext">
                 	<p>{!$Label.login_posttext}</p>
                 </apex:outputPanel>
             </apex:outputPanel>
    </apex:define>
</apex:composition>
<site:previewAsAdmin />
</apex:page>